<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>

    <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", id: "exampleFormControlInput1", placeholder: "name@example.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", id: "exampleFormControlInput2", placeholder: "Password" %>
        <%= link_to "Forget your password?", password_reset_path %>
    </div>
    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
  
<% end %>