<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
    <div class="mb-3">
        <%= form.label :Email %>
        <%= form.text_field :email, class:"form_control", placeholder: "steve@apple.com" %>
    </div>

    <div class="mb-3">
        <%= form.label :Password %>
        <%= form.password_field :password, class: "form_control", placeholder: "Password" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>

<% end %>